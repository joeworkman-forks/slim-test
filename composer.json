{
    "name": "nekofar/slim-test",
    "type": "library",
    "description": "Slim Framework test helper built on top of the PHPUnit test framework",
    "keywords": [
        "php",
        "framework",
        "phpunit",
        "unit",
        "test",
        "testing",
        "plugin",
        "slim"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Milad Nekofar",
            "email": "milad@nekofar.com"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "illuminate/testing": "^8.61",
        "phpunit/phpunit": "^9.5",
        "selective/test-traits": "^1.1 || ^2.0",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.8"
    },
    "require-dev": {
        "ext-json": "*",
        "ergebnis/phpstan-rules": "^0.15.3",
        "nekofar/dev-tools": "^1.0",
        "php-di/slim-bridge": "^3.1",
        "phpstan/phpstan-strict-rules": "^0.12.11"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Nekofar\\Slim\\Test\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit"
    }
}
